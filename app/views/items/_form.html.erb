<%= form_with(model: item) do |form| %>
  <%= form.hidden_field :lock_version %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :user_id, value:session[:user_id]%>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, step: :any %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.label :picture, style: "display: block" %>
    <%= form.file_field :picture %>
  </div>
  <br>
  <% if (@editing)  %>
    <%= image_tag item.picture.variant(resize_to_limit: [300, 300]) %>
    <%# <%= image_tag rails_blob_path(item.picture, disposition: "attachment") %>
  <% end %>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
